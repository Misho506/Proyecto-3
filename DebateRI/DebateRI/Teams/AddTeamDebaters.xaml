<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DebateRI.Teams.AddTeamDebaters">
  <StackLayout BackgroundColor="#F5F5F5">
    <Label x:Name="TeamDebaters"  FontSize="Medium" FontAttributes="Bold" TextColor="#424242" />
    <SearchBar x:Name="SearchBarDebaters"
               SearchButtonPressed = "SearchTeam_OnSearchButtonPressed"
               TextColor="#424242"/>
    <ListView x:Name="ContactsListView" />

    <StackLayout BackgroundColor="#F5F5F5">
      <Entry x:Name="nameTeam1" Placeholder="Ingrese el nombre del grupo1" TextColor="#212121"/>
      <ListView x:Name="SelectedTeam1ListView"/>
      <!--<Button x:Name="SendEmail1" Text="Invitar Grupo1"/>-->
    </StackLayout >
    <StackLayout BackgroundColor="#F5F5F5">
      <Entry x:Name="nameTeam2" Placeholder="Ingrese el nombre del grupo1"  TextColor="#212121"/>
      <ListView x:Name="SelectedTeam2ListView"/>
      <!--<Button x:Name="SendEmail2" Text="Invitar Grupo2"/>-->
    </StackLayout>
    <Button x:Name="addAdvisors" Text="Agregar asesores" Clicked="AddAdvisorsClicked" TextColor="White" BackgroundColor="#43A047"/>
  </StackLayout>
</ContentPage>