<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DebateRI.Teams.AddTeamDebaters">
  <StackLayout>
    <Label x:Name="TeamDebaters" FontSize="Medium" FontAttributes="Bold" />
    <SearchBar x:Name="SearchBarDebaters"
               SearchButtonPressed = "SearchTeam_OnSearchButtonPressed"/>
    <ListView x:Name="ContactsListView" />

    <StackLayout>
      <Label x:Name="Team1" Text="Grupo 1"/>
      <ListView x:Name="SelectedTeam1ListView"/>
      <!--<Button x:Name="SendEmail1" Text="Invitar Grupo1"/>-->
    </StackLayout>
    <StackLayout>
      <Label x:Name="Team2" Text="Grupo 2"/>
      <ListView x:Name="SelectedTeam2ListView"/>
      <!--<Button x:Name="SendEmail2" Text="Invitar Grupo2"/>-->
    </StackLayout>
    <Button x:Name="addAdvisors" Text="Agregar asesores" Clicked="AddAdvisorsClicked"/>
  </StackLayout>
</ContentPage>