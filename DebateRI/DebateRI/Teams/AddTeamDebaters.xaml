<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DebateRI.Teams.AddTeamDebaters">
  <StackLayout BackgroundColor="#F5F5F5">
    <Label x:Name="TeamDebaters" FontSize="Medium" FontAttributes="Bold" TextColor="#424242"/>
    <SearchBar x:Name="SearchBarDebaters"
               SearchButtonPressed = "SearchTeam_OnSearchButtonPressed"/>
    <ListView x:Name="ContactsListView" />

    <StackLayout BackgroundColor="#F5F5F5">
      <Label x:Name="Team1" Text="Grupo 1" FontSize="Medium" FontAttributes="Bold" TextColor="#424242"/>
      <ListView x:Name="SelectedTeam1ListView"/>     
    </StackLayout>
    
    <StackLayout BackgroundColor="#F5F5F5">
      <Label x:Name="Team2" Text="Grupo 2" FontSize="Medium" FontAttributes="Bold" TextColor="#424242"/>
      <ListView x:Name="SelectedTeam2ListView"/>
      
    </StackLayout>
    <Button x:Name="addAdvisors" Text="Agregar asesores" TextColor="White" BackgroundColor="#43A047" Clicked="AddAdvisorsClicked"/>
  </StackLayout>
</ContentPage>