<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DebateRI.Teams.AddAdvisorsTeam">
  <StackLayout BackgroundColor="#F5F5F5">
    <Label x:Name="TeamAdvisors" FontSize="Medium" FontAttributes="Bold" TextColor="#424242"/>
           <SearchBar x:Name="SearchBarAdvisors"
               SearchButtonPressed = "OnSearchButtonPressed"
               TextColor="#424242"/>
    <ListView x:Name="ContactsListView" />

    <StackLayout BackgroundColor="#F5F5F5">
      <Label x:Name="Team1" Text="Grupo 1" FontSize="Medium" FontAttributes="Bold" TextColor="#424242"/>
      <ListView x:Name="SelectedTeam1ListView" />
    </StackLayout>

    <StackLayout BackgroundColor="#F5F5F5">
      <Label x:Name="Team2" Text="Grupo 2" FontSize="Medium" FontAttributes="Bold" TextColor="#424242"/>
      <ListView x:Name="SelectedTeam2ListView" />
    </StackLayout>

    <Button x:Name="addObservers" Text="Agregar observadores" Clicked="AddObserversClicked" TextColor="White" BackgroundColor="#43A047"/>
  </StackLayout>
</ContentPage>