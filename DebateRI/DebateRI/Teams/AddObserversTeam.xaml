<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DebateRI.Teams.AddObserversTeam">
  <StackLayout>
    <Label x:Name="TeamAdvisors" FontSize="Medium" FontAttributes="Bold" />
    <SearchBar x:Name="SearchBarAdvisors"
               SearchButtonPressed = "OnSearchButtonPressed"/>
    <ListView x:Name="ContactsListView" />
    <Button Text="Agregar al grupo 2" Clicked="ChangeTeamButtonClicked"/>

    <StackLayout>
      <Label x:Name="Team1" Text="Grupo 1"/>
      <ListView x:Name="SelectedTeam1ListView" />
    </StackLayout>

    <StackLayout>
      <Label x:Name="Team2" Text="Grupo 2"/>
      <ListView x:Name="SelectedTeam2ListView" />
    </StackLayout>

  </StackLayout>
</ContentPage>