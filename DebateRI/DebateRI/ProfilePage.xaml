<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DebateRI.ProfilePage"
             Title="Perfil">
  <StackLayout BackgroundColor="#F5F5F5">
    <Label x:Name="NameLBL" Text=" " FontSize="Medium" FontAttributes="Bold" TextColor="#424242"/>

    <Label x:Name="RuleLBL" Text=" " FontSize="Medium" FontAttributes="Bold" TextColor="#424242"/>
    
    <Button Text="Chat" VerticalOptions="EndAndExpand" Clicked="ChatClicked" TextColor="White" BackgroundColor="#43A047"/>
    <Button Text="Secciones" VerticalOptions="EndAndExpand" Clicked="CheckSessionClicked" TextColor="White" BackgroundColor="#43A047"/>
    <Button Text="Reglamento de vestimenta" VerticalOptions="EndAndExpand" Clicked="DressCodeClicked" TextColor="White" BackgroundColor="#43A047"/>
  </StackLayout>

</ContentPage>