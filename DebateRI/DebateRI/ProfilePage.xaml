<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DebateRI.ProfilePage"
             Title="Mi Perfil">
  <StackLayout VerticalOptions="FillAndExpand"
       HorizontalOptions="FillAndExpand"
       Orientation="Vertical"
       Spacing="15"
       BackgroundColor="#F5F5F5">
    <Label x:Name="nameLabel" VerticalOptions="Center" HorizontalOptions="Center" FontSize="Medium" FontAttributes="Bold" TextColor="#424242"/>
    <Button x:Name="showSession" Text="Sesiones" Clicked="ShowSessionClicked" TextColor="White" BackgroundColor="#43A047"/>
    <Button x:Name="AddRule" Text="Reglamento de vestimenta" Clicked="AddRuleClicked" TextColor="White" BackgroundColor="#43A047"/>
  </StackLayout>
  
</ContentPage>