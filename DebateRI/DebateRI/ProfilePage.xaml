<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DebateRI.ProfilePage"
             Title="Mi Perfil">
  <StackLayout VerticalOptions="FillAndExpand"
       HorizontalOptions="FillAndExpand"
       Orientation="Vertical"
       Spacing="15">

    <Label x:Name="nameLabel" VerticalOptions="Center" HorizontalOptions="Center" />
    <Label x:Name="nameLabel" Text="{Binding App.currentUser.role.roleId}" VerticalOptions="Center" HorizontalOptions="Center" />
  </StackLayout>
  
</ContentPage>