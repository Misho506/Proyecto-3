<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DebateRI.SessionDetailPage">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness" iOS="0,40,0,0" />
  </ContentPage.Padding>
  <ContentPage.Content>
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="#F5F5F5">
      <StackLayout Orientation="Horizontal" BackgroundColor="#F5F5F5">
        <Label Text="Duración :" FontSize="Medium" FontAttributes="Bold" TextColor="#424242" HorizontalOptions="FillAndExpand" />
        <Label Text="{Binding Time}" FontSize="Medium" FontAttributes="Bold" TextColor="#424242"/>
      </StackLayout>
      <StackLayout Orientation="Horizontal" BackgroundColor="#F5F5F5">
        <Label Text="Descripción :" FontSize="Medium" FontAttributes="Bold" TextColor="#424242" HorizontalOptions="FillAndExpand" />
        <Label Text="{Binding Description}" FontSize="Medium" FontAttributes="Bold" TextColor="#424242"/>
      </StackLayout>
      <StackLayout Orientation="Horizontal" BackgroundColor="#F5F5F5">
        <Button x:Name="GoBack" Text="GoBack" Clicked="BackClicked" TextColor="White" BackgroundColor="#43A047"/>
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>