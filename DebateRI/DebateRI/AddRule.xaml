<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DebateRI.AddRule">
  <StackLayout VerticalOptions="FillAndExpand"
       HorizontalOptions="FillAndExpand"
       Orientation="Vertical"
       Spacing="15"
       BackgroundColor="#F5F5F5">
  <Label Text="Reglamente de vestimenta" FontSize="24" FontAttributes="Bold" TextColor="#424242" HorizontalOptions="Center" />
  <Label Text="Reglamento:" x:Name="confirmedRule" FontSize="25" FontAttributes="Bold" TextColor="#424242"  />
  <Entry x:Name="newRule" Placeholder="'Reglamento'" TextColor="#212121"/>
  <Button Text="Crear Reglamento" Clicked="CreateRuleClicked" TextColor="White" BackgroundColor="#43A047"/>
  </StackLayout>
</ContentPage>