<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DebateRI.AddRule">
  <StackLayout VerticalOptions="FillAndExpand"
    HorizontalOptions="FillAndExpand"
    Orientation="Vertical"
    Padding="0,75,0,20"
    Spacing="7"
    BackgroundColor="#F5F5F5">
    <Label Text="Reglamente de vestimenta:" FontSize="Medium" FontAttributes="Bold" TextColor="#424242"/>
    <Label Text="Reglamento" x:Name="confirmedRule" FontSize="Medium" FontAttributes="Bold" TextColor="#424242" />
    <Entry x:Name="newRule" Placeholder="'Reglamento'" PlaceholderColor="#424242"/>
    <Button x:Name="CreateRule" Text="Crear Reglamento" Clicked="CreateRuleClicked" TextColor="White" BackgroundColor="#43A047"/>
  </StackLayout>
</ContentPage>