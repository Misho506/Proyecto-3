<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DebateRI.QuestionStage">

  <StackLayout >
    <Label Text="Preguntas" TextColor="Green" FontSize="22" HorizontalOptions="CenterAndExpand"/>
    <Entry x:Name="Question" Placeholder="Digite su pregunta" />
    <Button Text="Envie su pregunta" Clicked="SendQuestionCliked"/>
    <ListView x:Name="listView" VerticalOptions="FillAndExpand" BackgroundColor="White"/>
    <Button Text="Pasar a la conclusion" Clicked="OnPassClicked"/>
  </StackLayout>
  

</ContentPage>