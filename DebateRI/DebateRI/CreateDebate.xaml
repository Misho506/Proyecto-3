<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DebateRI.CreateDebate"
             Title="Crear Debate">
  <StackLayout>
    <Label Text="Nombre:" FontSize="Medium" FontAttributes="Bold" TextColor="Green"/>
    <Entry x:Name="debateName" Placeholder="'Nombre del debate'"/>

    <Label Text="Sesiones del debate: " FontAttributes="Bold" TextColor="Green" FontSize="Medium"/>
    <ListView x:Name="debateSessions" VerticalOptions="FillAndExpand" BackgroundColor="White"/>

    <Button Text="Crear Grupos" VerticalOptions="EndAndExpand" Clicked="CreateTeamsClicked" TextColor="Green" />
  </StackLayout>
</ContentPage>