<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DebateRI.CreateDebate"
             Title="Crear Debate">
  <StackLayout VerticalOptions="FillAndExpand"
    HorizontalOptions="FillAndExpand"
    Orientation="Vertical"
    Padding="0,75,0,20">
    BackgroundColor="#F5F5F5">
    <Label Text="Nombre:" FontSize="Medium" FontAttributes="Bold" TextColor="#424242"/>
    <Entry x:Name="debateName" Placeholder="'Nombre del debate'" PlaceholderColor="#424242"/>

    <Label Text="Sesiones del debate: " FontSize="Medium" FontAttributes="Bold" TextColor="#424242"/>
    <ListView x:Name="debateSessions" VerticalOptions="FillAndExpand" />

    <Button Text="Crear Grupos" VerticalOptions="EndAndExpand" Clicked="CreateTeamsClicked" TextColor="White" BackgroundColor="#43A047"/>
  </StackLayout>
</ContentPage>