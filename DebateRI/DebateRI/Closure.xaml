<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DebateRI.Closure">

  <StackLayout BackgroundColor="#F5F5F5">

    <Label x:Name="ClosureLBL"  FontSize="Medium" FontAttributes="Bold" TextColor="#424242" HorizontalOptions="CenterAndExpand" />
    <Entry x:Name="entryClosure" PlaceholderColor="#424242"/>
    <Button Text="Crear conclusion" Clicked="SendClosure" TextColor="White" BackgroundColor="#43A047"/>
    <Button Text="Finalizar debate" Clicked="CloseDebateClicked" TextColor="White" BackgroundColor="#43A047"/>
  </StackLayout>
</ContentPage>