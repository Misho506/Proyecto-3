<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DebateRI.Closure">

  <StackLayout>

    <Label x:Name="ClosureLBL"  TextColor="Green" FontSize="22" HorizontalOptions="CenterAndExpand" />
    <Entry x:Name="entryClosure"/>
    <Button Text="Crear conclusion" Clicked="SendClosure"/>
    <Button Text="Finalizar debate" Clicked="CloseDebateClicked"/>
  </StackLayout>
</ContentPage>