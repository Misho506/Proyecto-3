<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DebateRI.NewArgumentation">
  <StackLayout BackgroundColor="#F5F5F5">
    <Label x:Name="minutes" Text="Minutos para hablar" FontSize="Medium" FontAttributes="Bold" TextColor="#424242" HorizontalOptions="CenterAndExpand"/>
    <Label x:Name="timeLabel" Text="Tiempo: " FontSize="Medium" FontAttributes="Bold" TextColor="#424242" HorizontalOptions="CenterAndExpand"/>
    <Button x:Name="AddMin" Text="Agregar un minuto" Clicked="AddMinClicked" TextColor="White" BackgroundColor="#43A047"/>
    <Button x:Name="LessMin" Text="Quitar un minuto" Clicked="LessMinClicked" TextColor="White" BackgroundColor="#43A047"/>
    <Button x:Name="Star" Text="Iniciar conteo" Clicked="StarClicked" TextColor="White" BackgroundColor="#43A047"/>
    <Button Text="Siguiente sección" Clicked="OnPassClicked" TextColor="White" BackgroundColor="#43A047"/>
  </StackLayout>
</ContentPage>